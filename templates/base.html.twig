            <nav>
                <a href="{{ path('home') }}" class="logo">
                    <span class="logo-icon">üç´</span>
                    <span>Symphony_Comp</span>
                </a>
                
                <ul class="nav-links">
                    <li><a href="{{ path('home') }}" {% if app.request.attributes.get('_route') == 'home' %}class="active"{% endif %}>Accueil</a></li>
                    <li><a href="{{ path('app_chocolate_index') }}" {% if 'chocolate' in app.request.attributes.get('_route') %}class="active"{% endif %}>Chocolats</a></li>
                    <li><a href="{{ path('about') }}" {% if app.request.attributes.get('_route') == 'about' %}class="active"{% endif %}>Qui sommes-nous ?</a></li>
                    <li><a href="{{ path('contact') }}" {% if app.request.attributes.get('_route') == 'contact' %}class="active"{% endif %}>Contact</a></li>
                    
                    {% if app.user %}
                        <div class="user-menu">
                            <span>Bonjour, {{ app.user.email }}</span>
                            <a href="{{ path('app_profile') }}" class="btn btn-secondary btn-small">Profil</a>
                            <a href="{{ path('app_logout') }}" class="btn btn-danger btn-small">D√©connexion</a>
                        </div>
                    {% else %}
