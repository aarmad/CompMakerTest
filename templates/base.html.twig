    <!-- Flash Messages -->
    {% for message in app.flashes('success') %}
        <div class="flash-messages">
            <div class="flash-message flash-success">
                <span>Bien !</span>
                <span>{{ message }}</span>
            </div>
        </div>
    {% endfor %}
    
    {% for message in app.flashes('error') %}
        <div class="flash-messages">
            <div class="flash-message flash-error">
                <span>Nahh !</span>
                <span>{{ message }}</span>
            </div>
        </div>
    {% endfor %}

    <!-- Main Content -->
    <main>
        <div class="container">
            {% block body %}{% endblock %}
        </div>
