{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
<h1>Mon profil</h1>

<ul>
    <li>Email : {{ user.email }}</li>
</ul>

<a href="{{ path('user_edit_current') }}">Modifier mon profil</a>
<form action="{{ path('app_user_delete', {id: user.id}) }}" method="post" onsubmit="return confirm('Supprimer votre compte ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button type="submit">Supprimer mon compte</button>
</form>
{% endblock %}
